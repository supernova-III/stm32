{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 26,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "default",
      "hidden": false,
      "description": "Configure project with STM32 toolchain",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/toolchain.cmake"
      }
    },
    {
      "name": "unit_tests",
      "hidden": false,
      "description": "Configure project with host toolchain for unit testing",
      "binaryDir": "${sourceDir}/build-tests",
      "cacheVariables": {
        "BUILD_UNIT_TESTS": "On"
      }
    }
  ]
}
